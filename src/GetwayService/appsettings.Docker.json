    "loglevel": {
      "default": "information",
      "microsoft.aspnetcore": "information"
    }
  },

  "identityserviceurl": "http://identity-svc:80",

  "reverseproxy": {
    "clusters": {
      "auctions": {
        "destinations": {
          "auctionsapi": {
            "address": "http://auction-svc:80"
          }
        }
      },
      "search": {
        "destinations": {
          "searchapi": {
